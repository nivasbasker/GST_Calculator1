<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.codewithzio.gstcalculator.main.ui.calculator.CalculatorFragment"
        android:label="@string/title_calculator"
        tools:layout="@layout/fragment_calc" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.codewithzio.gstcalculator.main.ui.invoice.InvoiceFragment"
        android:label="@string/title_invoices"
        tools:layout="@layout/fragment_invoices" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.codewithzio.gstcalculator.main.ui.store.StoreFragment"
        android:label="@string/title_store"
        tools:layout="@layout/fragment_store" />
